.block
  .content
    %h2= "Reservation for #{@product.name}"

    .inner
      = form_for @reservation, :html => { :class => "form" } do |f|
        .group
          .left= f.label :photo, :class => "label"
          .right= f.file_field :photo, :class => "file_field"

        .group
          .left Test
          .right Test

        .group
          = f.hidden_field :product_id, :value => @product.id

        .group.navform.wat-cf
          = f.submit "Save Reservation", :class => "button"

        %div{ :style => "clear:both;" }

