= form_for @reservation, :html => { :class => "form" } do |f|
  .group
    .left= f.label "Information Sheet", :class => "label"
    .right= f.file_field :info_sheet, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    .left= f.label :deposit_slip, :class => "label"
    .right= f.file_field :deposit_slip, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    .left= f.label "Valid IDs", :class => "label"
    .right= f.file_field :ids, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    .left= f.label "2x2 Picture", :class => "label"
    .right= f.file_field :photo, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    .left= f.label "Proof of Income", :class => "label"
    .right= f.file_field :proof_income, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    .left= f.label "DTI Business Permit (if self employed only)", :class => "label"
    .right= f.file_field :dti, :class => "file_field"
  %div{ :style => "clear:both;" }
  %br/
  .group
    = f.hidden_field :product_id, :value => @product.id

  .group.navform.wat-cf
    = f.submit "Save Reservation", :class => "button"

