.block.block-forms
  .content
    %h2 Update Profile
    .inner
      = form_for @profile, :html => { :class => "form" } do |f|
        .group
          = f.label :full_name, :class => "label"
          = f.text_field :full_name, :class => "text_field"

        .group
          = f.label :address, :class => "label"
          = f.text_field :address, :class => "text_field"

        .group
          = f.label :contact_number, :class => "label"
          = f.text_field :contact_number, :class => "text_field"

        .group.navform.wat-cf
          = f.submit "Save", :class => "button"
