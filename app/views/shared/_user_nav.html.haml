#user-navigation
  %ul.wat-cf
    - if current_user
      %li
        %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
      %li= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "logout"
    - else
      %li= link_to "Sign in", "/users/sign_in"
      %li= link_to "Sign up", "/users/sign_up"
